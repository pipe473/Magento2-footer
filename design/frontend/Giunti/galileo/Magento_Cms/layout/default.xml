<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <container name="page_top_after_nav" label="Page Top After Navigation Container" htmlTag="div" htmlClass="hero banner after-navigation" before="main.content"/>
        </referenceContainer>

        <referenceBlock name="footer_links" remove="true" />
 
        <referenceContainer name="footer">
            <container name="footer-container-links" label="Footer Container" htmlTag="div" htmlClass="footer-container-links" before="copyright" />
        </referenceContainer>

        <referenceContainer name="cms_footer_links_container">
            <container name="footer_company_info_title_container" htmlTag="div" htmlClass="footer-title-micuenta">
                <block class="Magento\Theme\Block\Html\Footer" name="footer-container-links" template="html/footer.phtml"/>
            </container>
        </referenceContainer>
    </body>
</page>
